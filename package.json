{
  "name": "pi-langlearn",
  "version": "0.2.0",
  "description": "Duolingo-esque language learning overlay for Pi",
  "keywords": [
    "extension",
    "language-learning",
    "pi",
    "pi-coding-agent",
    "pi-package",
    "srs",
    "tui"
  ],
  "license": "MIT",
  "author": "",
  "files": [
    "dist",
    "src",
    "README.md",
    "AGENTS.md",
    "docs/specs"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "oxlint src",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "prepublishOnly": "bun run build",
    "prepare": "lefthook install",
    "release": "bun run scripts/release.ts",
    "typecheck": "tsc -p tsconfig.json",
    "check": "bun run typecheck && bun run lint && bun run format:check"
  },
  "devDependencies": {
    "@mariozechner/pi-coding-agent": "*",
    "@mariozechner/pi-tui": "*",
    "@types/node": "^22.19.9",
    "lefthook": "^2.1.0",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@mariozechner/pi-coding-agent": "*",
    "@mariozechner/pi-tui": "*"
  },
  "pi": {
    "extensions": [
      "./src/index.ts"
    ]
  }
}
